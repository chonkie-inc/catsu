---
import { ModelsTableWithSearch } from '../components/ModelsTableWithSearch';
import { AboutModal } from '../components/AboutModal';
import modelsData from '../models.json';
import '../styles/global.css';

// Flatten the models from the provider structure
const models = Object.entries(modelsData).flatMap(([provider, providerModels]) =>
  (providerModels as any[]).map((model) => ({
    ...model,
    provider,
  }))
);

const providerCount = Object.keys(modelsData).length;
const modelCount = models.length;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Catsu - An open-source database of embedding models" />
    <title>Catsu Models</title>
    <link rel="icon" type="image/png" href="/favicon.png" />
  </head>
  <body class="bg-white dark:bg-gray-950 text-gray-900 dark:text-gray-100 min-h-screen overflow-x-hidden">
    <!-- Navbar -->
    <nav class="border-b border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-950 sticky top-0 z-50">
      <div class="px-4 py-3">
        <div class="flex items-center justify-between gap-4">
          <!-- Left: Icon + Title + Description -->
          <div class="flex items-center gap-3">
            <img src="/catsu-icon-256.png" alt="Catsu" class="w-8 h-8" />
            <h1 class="hidden md:block text-xl font-bold tracking-tight whitespace-nowrap text-gray-900 dark:text-gray-100">
              CATSU
            </h1>
            <span class="hidden lg:block text-xs text-gray-500 dark:text-gray-400 whitespace-nowrap">
              Supported embedding models, specs, and capabilities
            </span>
          </div>

          <!-- Right: Stats + Search + GitHub -->
          <div class="flex items-center gap-4">
            <!-- Stats -->
            <div class="hidden md:flex items-center gap-3 text-xs text-gray-600 dark:text-gray-400">
              <span><span class="font-medium text-gray-900 dark:text-gray-100">{providerCount}</span> providers</span>
              <span><span class="font-medium text-gray-900 dark:text-gray-100" id="navbar-model-count">{modelCount}</span> models</span>
            </div>

            <!-- Search -->
            <div id="navbar-search">
              <!-- Search will be injected here by React component -->
            </div>

            <!-- GitHub Icon -->
            <a
              href="https://github.com/chonkie-inc/catsu"
              target="_blank"
              rel="noopener noreferrer"
              class="p-1.5 rounded bg-gray-900 dark:bg-white text-white dark:text-gray-900 hover:bg-gray-700 dark:hover:bg-gray-200 transition-colors"
              aria-label="View on GitHub"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
              </svg>
            </a>

            <!-- About Button -->
            <AboutModal client:load />
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main>
      <ModelsTableWithSearch models={models} client:load />
    </main>
  </body>
</html>
